<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.es.easysupervise.activity.AdDetailsActivity">

    <include layout="@layout/navigationbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imgAd"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ad_pic_default"
                android:visibility="visible"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                >
                <TextView
                    android:id="@+id/tvOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="媒体编号:"
                    android:gravity="center_vertical"
                    android:textColor="@color/TEXT_TITLE"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:typeface="sans"

                    />
                <TextView
                    android:id="@+id/tvMediaId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TEXT_VALUE"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:layout_toRightOf="@+id/tvOne"
                    android:layout_marginLeft="3dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                >
                <TextView
                    android:id="@+id/tvTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="媒体形式:"
                    android:gravity="center_vertical"
                    android:textColor="@color/TEXT_TITLE"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:typeface="sans"
                    />
                <TextView
                    android:id="@+id/tvMediaType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TEXT_VALUE"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:layout_toRightOf="@+id/tvTwo"
                    android:layout_marginLeft="3dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                >
                <TextView
                    android:id="@+id/tvThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="区域属性:"
                    android:gravity="center_vertical"
                    android:textColor="@color/TEXT_TITLE"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:typeface="sans"
                    />
                <TextView
                    android:id="@+id/tvAreaAttr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TEXT_VALUE"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/tvThree"
                    android:typeface="sans"
                    android:layout_marginLeft="3dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                >
                <TextView
                    android:id="@+id/tvFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="媒体位置:"
                    android:gravity="center_vertical"
                    android:textColor="@color/TEXT_TITLE"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:typeface="sans"
                    />
                <TextView
                    android:id="@+id/tvMediaAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TEXT_VALUE"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:layout_toRightOf="@+id/tvFour"
                    android:layout_marginLeft="3dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                >
                <TextView
                    android:id="@+id/tvFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行政区域:"
                    android:gravity="center_vertical"
                    android:textColor="@color/TEXT_TITLE"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:typeface="sans"
                    />
                <TextView
                    android:id="@+id/tvDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TEXT_VALUE"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:layout_toRightOf="@+id/tvFive"
                    android:layout_marginLeft="3dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlADContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tvSix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广告内容:"
                    android:gravity="center_vertical"
                    android:textColor="@color/TEXT_TITLE"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:typeface="sans"


                    />
                <TextView
                    android:id="@+id/tvAdContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TEXT_VALUE"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:layout_toRightOf="@+id/tvSix"
                    android:layout_marginLeft="3dp"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
